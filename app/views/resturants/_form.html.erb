<%= form_for(resturant) do |f| %>
  <% if resturant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resturant.errors.count, "error") %> prohibited this resturant from being saved:</h2>

      <ul>
      <% resturant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :cuisine_id%>
    <%= f.collection_select :cuisine_id, Cuisine.all, :id, :title, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :tenbis %>
    <%= f.check_box :tenbis %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :max_delivery_time %>
    <%= f.number_field :max_delivery_time, in:30...91, step:10 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

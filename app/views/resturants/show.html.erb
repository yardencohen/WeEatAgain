<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @resturant.name %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @resturant.cuisine.title %>
</p>

<p>
  <strong>Tenbis:</strong>
  <%= @resturant.tenbis %>
</p>

<p>
  <strong>Address:</strong>
  <%= @resturant.address %>
</p>

<p>
  <strong>Max delivery time:</strong>
  <% unless @resturant.max_delivery_time.blank? %>
    <%= @resturant.max_delivery_time %> Minutes
  <% else %>
    Not Available
  <% end %>
</p>

